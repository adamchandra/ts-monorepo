{
  "name": "@watr/codemorphs",
  "version": "1.0.0",
  "private": false,
  "license": "ISC",
  "description": "Utilities to generate and manipulate typescript code",
  "keywords": [],
  "author": "Adam Saunders <saunders@cs.umass.edu>",
  "main": "./dist/main.js",
  "dependencies": {
    "@types/bluebird": "^3.5.35",
    "bluebird": "^3.7.2",
    "commander": "^7.2.0",
    "fs-extra": "^10.0.0",
    "ts-morph": "^11.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/chai": "^4.2.18",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "~15.12.2",
    "@types/split": "^1.0.0",
    "@types/through2": "^2.0.36",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@wessberg/rollup-plugin-ts": "^1.3.14",
    "chai": "^4.3.4",
    "eslint": "^7.28.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.4",
    "lodash": "^4.17.21",
    "rollup": "~2.51.2",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "build": "rollup -c",
    "morph": "node dist/main.js",
    "lint": "eslint --config .eslintrc.js --ext .ts --ignore-path ../../.gitignore ./src --",
    "lint:fix": "eslint --config .eslintrc.js --ext .ts --ignore-path ../../.gitignore ./src --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
